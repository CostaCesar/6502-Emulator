                "-DCMAKE_CXX_COMPILER:FILEPATH=C:\\msys64\\mingw64\\bin\\g++.exe",
                "-SD:/Progm/C++/6502EMU",
                "-Bd:/Progm/C++/6502EMU/build",
                "-G",
                "\"MinGW Makefiles\""
